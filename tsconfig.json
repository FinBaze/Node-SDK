{
  "compilerOptions": {
    "declaration": true,
    "isolatedModules": true,
    "sourceMap": true,
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": "./src",
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "dist",
    "node_modules"
  ]
}
